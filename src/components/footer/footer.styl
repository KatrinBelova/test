.footer
	color light_blue
	text-transform uppercase
	font-size 12px
	font-weight 800
	letter-spacing 2.6px
	margin 0 0 37px 0
	&__list
		display flex
		align-items center
	&__info
		.footer__item
			padding-right 44px
	&__socials
		justify-content flex-end
		.footer__item
			padding-left 37px

@media screen and (max-width: 992px)
	.footer
		&__socials
			justify-content flex-start
			.footer__item
				margin-top 37px
				padding-left 0
				padding-right 44px
				
@media screen and (max-width: 560px)
	.footer
		font-size 8px
		letter-spacing 1px
		&__info,
		&__socials
			.footer__item
				padding-right 20px